@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}

<style>
    .reset-password-container {
        max-width: 450px;
        margin: 3rem auto;
    }

    .reset-password-card {
        background: white;
        border-radius: 16px;
        padding: 2.5rem;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        border: 1px solid rgba(0, 0, 0, 0.05);
    }

    .reset-password-icon {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, #ffe5e6 0%, #ffffff 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
        color: #fe5658;
        font-size: 2rem;
    }

    .reset-password-title {
        font-size: 1.75rem;
        font-weight: 700;
        color: #1f2937;
        margin-bottom: 0.5rem;
        text-align: center;
    }

    .reset-password-subtitle {
        color: #6b7280;
        font-size: 0.9375rem;
        text-align: center;
        margin-bottom: 2rem;
        line-height: 1.5;
    }

    .password-requirements {
        background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
        border-left: 4px solid #3b82f6;
        border-radius: 10px;
        padding: 1rem;
        margin-bottom: 1.5rem;
    }

    .password-requirements-title {
        font-weight: 600;
        color: #1e40af;
        font-size: 0.875rem;
        margin-bottom: 0.5rem;
    }

    .password-requirements ul {
        margin: 0;
        padding-left: 1.25rem;
        color: #1e3a8a;
        font-size: 0.8125rem;
    }

    .password-requirements li {
        margin-bottom: 0.25rem;
    }
</style>

<div class="container reset-password-container">
    <div class="card border-0 shadow-lg reset-password-card">
        <div class="reset-password-icon">
            <i class="fas fa-key"></i>
        </div>
        
        <h2 class="reset-password-title">Reset Password</h2>
        <p class="reset-password-subtitle">
            Enter your new password below
        </p>

        <form method="post" id="resetPasswordForm">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert" style="border-radius: 10px; border-left: 4px solid #ef4444;"></div>
            
            <input asp-for="Input.Code" type="hidden" />
            
            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label fw-semibold" style="font-size: 0.875rem; color: #374151;">
                    <i class="fas fa-envelope me-2 dubirent-red"></i>Email
                </label>
                <input asp-for="Input.Email" 
                       class="form-control" 
                       autocomplete="username" 
                       aria-required="true" 
                       readonly
                       style="border: 1px solid #e5e7eb; border-radius: 10px; padding: 0.75rem; background-color: #f9fafb;" />
                <span asp-validation-for="Input.Email" class="text-danger small mt-1 d-block"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="Input.Password" class="form-label fw-semibold" style="font-size: 0.875rem; color: #374151;">
                    <i class="fas fa-lock me-2 dubirent-red"></i>New Password
                </label>
                <input asp-for="Input.Password" 
                       class="form-control" 
                       autocomplete="new-password" 
                       aria-required="true" 
                       placeholder="Enter new password" 
                       style="border: 1px solid #e5e7eb; border-radius: 10px; padding: 0.75rem;" />
                <span asp-validation-for="Input.Password" class="text-danger small mt-1 d-block"></span>
            </div>

            <div class="password-requirements">
                <div class="password-requirements-title">
                    <i class="fas fa-info-circle me-1"></i>Password Requirements:
                </div>
                <ul>
                    <li>At least 6 characters long</li>
                    <li>Contains at least one uppercase letter</li>
                    <li>Contains at least one lowercase letter</li>
                    <li>Contains at least one number</li>
                </ul>
            </div>
            
            <div class="mb-4">
                <label asp-for="Input.ConfirmPassword" class="form-label fw-semibold" style="font-size: 0.875rem; color: #374151;">
                    <i class="fas fa-lock me-2 dubirent-red"></i>Confirm Password
                </label>
                <input asp-for="Input.ConfirmPassword" 
                       class="form-control" 
                       autocomplete="new-password" 
                       aria-required="true" 
                       placeholder="Confirm new password" 
                       style="border: 1px solid #e5e7eb; border-radius: 10px; padding: 0.75rem;" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger small mt-1 d-block"></span>
            </div>
            
            <button type="submit" class="btn btn-primary w-100 mb-3" style="background: linear-gradient(135deg, #fe5658 0%, #ff787b 100%); border: none; border-radius: 10px; padding: 0.75rem; font-weight: 600;">
                <i class="fas fa-check me-2"></i>Reset Password
            </button>
            
            <div class="text-center">
                <a asp-page="./Login" class="text-decoration-none small" style="color: var(--primary-color, #fe5658);">
                    <i class="fas fa-arrow-left me-1"></i>Back to Login
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
    </script>
}

