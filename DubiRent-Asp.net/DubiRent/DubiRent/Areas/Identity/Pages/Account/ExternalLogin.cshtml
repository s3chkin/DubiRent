@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Complete Registration";
}

<style>
    body {
        background: linear-gradient(135deg, #f9fafb 0%, #f3f4f6 100%);
        min-height: 100vh;
    }

    .external-login-container {
        max-width: 500px;
        margin: 4rem auto;
        padding: 0 1rem;
    }

    .external-login-card {
        background: white;
        border-radius: 20px;
        padding: 3rem 2.5rem;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
        border: 1px solid rgba(0, 0, 0, 0.05);
        position: relative;
        overflow: hidden;
    }

    .external-login-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(135deg, #fe5658 0%, #ff6b6d 50%, #ff787b 100%);
    }

    .provider-icon {
        width: 70px;
        height: 70px;
        background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
        font-size: 2rem;
        border: 3px solid rgba(254, 86, 88, 0.1);
        box-shadow: 0 4px 15px rgba(254, 86, 88, 0.15);
    }

    .provider-icon.google {
        background: linear-gradient(135deg, #fff4e6 0%, #ffe8cc 100%);
    }

    .external-login-title {
        font-size: 1.875rem;
        font-weight: 700;
        color: #1f2937;
        margin-bottom: 0.75rem;
        text-align: center;
    }

    .external-login-subtitle {
        color: #6b7280;
        font-size: 0.9375rem;
        text-align: center;
        margin-bottom: 2rem;
        line-height: 1.6;
    }

    .success-badge {
        background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
        border-left: 4px solid #10b981;
        border-radius: 12px;
        padding: 1rem 1.25rem;
        margin-bottom: 2rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .success-badge-icon {
        color: #10b981;
        font-size: 1.25rem;
        flex-shrink: 0;
    }

    .success-badge-text {
        color: #065f46;
        font-size: 0.875rem;
        margin: 0;
        line-height: 1.5;
    }

    .success-badge-text strong {
        color: #047857;
        font-weight: 600;
    }

    .form-control {
        border: 2px solid #e5e7eb;
        border-radius: 12px;
        padding: 0.875rem 1rem;
        font-size: 0.9375rem;
        transition: all 0.3s ease;
    }

    .form-control:focus {
        border-color: #fe5658;
        box-shadow: 0 0 0 4px rgba(254, 86, 88, 0.1);
        outline: none;
    }

    .btn-primary {
        background: linear-gradient(135deg, #fe5658 0%, #ff787b 100%);
        border: none;
        border-radius: 12px;
        padding: 0.875rem 1.5rem;
        font-weight: 600;
        font-size: 0.9375rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(254, 86, 88, 0.25);
    }

    .btn-primary:hover {
        background: linear-gradient(135deg, #ff6b6d 0%, #ff8b8e 100%);
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(254, 86, 88, 0.35);
    }

    .btn-primary:disabled {
        opacity: 0.7;
        cursor: not-allowed;
        transform: none;
    }

    .alert-danger {
        border-radius: 12px;
        border-left: 4px solid #ef4444;
        background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
        color: #991b1b;
        padding: 1rem 1.25rem;
    }
</style>

<div class="external-login-container">
    <div class="card border-0 shadow-lg external-login-card">
        <div class="provider-icon @(Model.ProviderDisplayName?.ToLower() == "google" ? "google" : "")">
            @if (Model.ProviderDisplayName?.ToLower() == "google")
            {
                <svg width="40" height="40" viewBox="0 0 24 24">
                    <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                    <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                    <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                    <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                </svg>
            }
            else
            {
                <i class="fas fa-check-circle" style="color: #10b981;"></i>
            }
        </div>

        <h2 class="external-login-title">Almost There!</h2>
        <p class="external-login-subtitle">
            Complete your registration to finish signing in with <strong>@Model.ProviderDisplayName</strong>
        </p>

        <div class="success-badge">
            <i class="fas fa-check-circle success-badge-icon"></i>
            <p class="success-badge-text">
                You've successfully authenticated with <strong>@Model.ProviderDisplayName</strong>. 
                Please confirm your email address below to complete your registration.
            </p>
        </div>

        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post" id="externalLoginForm">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3" role="alert"></div>
            
            <div class="mb-4">
                <label asp-for="Input.Email" class="form-label fw-semibold mb-2" style="font-size: 0.9375rem; color: #374151;">
                    <i class="fas fa-envelope me-2" style="color: #fe5658;"></i>Email Address
                </label>
                <input asp-for="Input.Email" 
                       class="form-control" 
                       autocomplete="email" 
                       aria-required="true" 
                       placeholder="Enter your email address"
                       readonly
                       style="background-color: #f9fafb;" />
                <span asp-validation-for="Input.Email" class="text-danger small mt-2 d-block"></span>
                <small class="text-muted mt-1 d-block" style="font-size: 0.8125rem;">
                    <i class="fas fa-info-circle me-1"></i>This email will be used for your account
                </small>
            </div>
            
            <button type="submit" class="btn btn-primary w-100 mb-3" id="registerBtn">
                <i class="fas fa-user-plus me-2"></i>
                <span class="btn-text">Complete Registration</span>
            </button>
            
            <div class="text-center">
                <a asp-page="./Login" class="text-decoration-none fw-semibold small" style="color: var(--primary-color, #fe5658);">
                    <i class="fas fa-arrow-left me-1"></i>Back to Login
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
    </script>
}

