@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<style>
    .external-login-container {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .btn-google {
        background-color: #ffffff;
        color: #757575;
        border: 1px solid #dadce0;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
        font-weight: 500;
        transition: all 0.3s ease;
        width: 100%;
        padding: 0.75rem 1rem;
        border-radius: 10px;
    }

    .btn-google:hover {
        background-color: #f8f9fa;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        transform: translateY(-2px);
    }

    .btn-facebook {
        background-color: #1877f2;
        color: #ffffff;
        border: none;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
        font-weight: 500;
        transition: all 0.3s ease;
        width: 100%;
        padding: 0.75rem 1rem;
        border-radius: 10px;
    }

    .btn-facebook:hover {
        background-color: #166fe5;
        box-shadow: 0 4px 12px rgba(24, 119, 242, 0.3);
        transform: translateY(-2px);
        color: #ffffff;
    }

    .external-login-divider {
        display: flex;
        align-items: center;
        text-align: center;
        margin: 1.5rem 0;
    }

    .external-login-divider::before,
    .external-login-divider::after {
        content: '';
        flex: 1;
        border-bottom: 1px solid #e5e7eb;
    }

    .external-login-divider span {
        padding: 0 1rem;
        color: #6b7280;
        font-size: 0.875rem;
    }
</style>

<div class="container" style="max-width: 450px; margin: 3rem auto;">
    <div class="card border-0 shadow-lg" style="border-radius: 16px; padding: 2.5rem;">
        <div class="text-center mb-4">
            <h2 class="fw-bold mb-2" style="font-size: 1.75rem; color: #1f2937;">Welcome Back</h2>
            <p class="text-muted mb-0" style="font-size: 0.9375rem;">Sign in to your account to continue</p>
        </div>

        <!-- External Login Buttons -->
        @if ((Model.ExternalLogins?.Count ?? 0) > 0)
        {
            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div class="external-login-container mb-4">
                    @foreach (var provider in Model.ExternalLogins!)
                    {
                        if (provider.Name == "Google")
                        {
                            <button type="submit" class="btn btn-google" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                <svg width="20" height="20" viewBox="0 0 24 24">
                                    <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                                    <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                                    <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                                    <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                                </svg>
                                <span>Continue with Google</span>
                            </button>
                        }
                        else if (provider.Name == "Facebook")
                        {
                            <button type="submit" class="btn btn-facebook" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                <i class="fab fa-facebook-f"></i>
                                <span>Continue with Facebook</span>
                            </button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-primary w-100" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                        }
                    }
                </div>
            </form>
            
            <div class="external-login-divider">
                <span>or</span>
            </div>
        }

        <!-- Local Login Form -->
        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
            
            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label fw-semibold" style="font-size: 0.875rem; color: #374151;">Email</label>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Enter your email" style="border: 1px solid #e5e7eb; border-radius: 10px; padding: 0.75rem;" />
                <span asp-validation-for="Input.Email" class="text-danger small"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="Input.Password" class="form-label fw-semibold" style="font-size: 0.875rem; color: #374151;">Password</label>
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Enter your password" style="border: 1px solid #e5e7eb; border-radius: 10px; padding: 0.75rem;" />
                <span asp-validation-for="Input.Password" class="text-danger small"></span>
            </div>
            
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="Input.RememberMe" style="border-radius: 4px;" />
                    <label class="form-check-label small" asp-for="Input.RememberMe" style="color: #6b7280;">
                        Remember me
                    </label>
                </div>
                <a id="forgot-password" asp-page="./ForgotPassword" class="small text-decoration-none" style="color: var(--primary-color, #fe5658);">Forgot password?</a>
            </div>
            
            <button id="login-submit" type="submit" class="btn btn-primary w-100 mb-3" style="background: linear-gradient(135deg, #fe5658 0%, #ff787b 100%); border: none; border-radius: 10px; padding: 0.75rem; font-weight: 600;">
                Sign In
            </button>
            
            <div class="text-center">
                <p class="mb-0 small" style="color: #6b7280;">
                    Don't have an account? 
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none fw-semibold" style="color: var(--primary-color, #fe5658);">Sign up</a>
                </p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
