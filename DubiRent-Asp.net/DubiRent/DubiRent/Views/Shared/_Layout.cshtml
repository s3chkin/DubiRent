<!DOCTYPE html>
<html lang="en" itemscope itemtype="https://schema.org/Organization">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(ViewData["Title"] != null ? $"{ViewData["Title"]} - DubiRent" : "DubiRent - Premium Property Rentals in Dubai")</title>
    <link rel="icon" type="image/png" href="~/images/site-logo/DubiRent-single_logo-cut.png" />
    <link rel="shortcut icon" type="image/png" href="~/images/site-logo/DubiRent-single_logo-cut.png" />
    
    <!-- SEO Meta Tags -->
    <partial name="_SeoMeta" />
    
    <!-- Structured Data (JSON-LD) -->
    @if (ViewData["StructuredData"] != null)
    {
        @Html.Raw(ViewData["StructuredData"])
    }
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DubiRent.styles.css" asp-append-version="true" />
    <link href="~/css/homepage.css" rel="stylesheet" asp-append-version="true" />
    
    <!-- Preconnect for performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="dns-prefetch" href="https://cdnjs.cloudflare.com">
    <link rel="dns-prefetch" href="https://images.unsplash.com">
</head>
<body>
    <header class="fixed-top">
        <nav class="navbar navbar-expand-custom navbar-toggleable-custom navbar-light bg-white border-bottom box-shadow">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="text-decoration: none;">
                    <img src="~/images/site-logo/DubiRent-cut.png" alt="DubiRent" style="height: 40px; width: auto;" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-custom-inline-flex justify-content-between">
                    @using Microsoft.AspNetCore.Identity
                    @inject SignInManager<DubiRent.Data.Models.AppUser> SignInManager
                    @inject UserManager<DubiRent.Data.Models.AppUser> UserManager
                    @{
                        var controller = ViewContext.RouteData.Values["Controller"]?.ToString();
                        var action = ViewContext.RouteData.Values["Action"]?.ToString();
                        var isHomeActive = controller == "Home" && action == "Index";
                        var isPropertiesActive = controller == "Property" && action == "Properties";
                        var isContactActive = controller == "Home" && action == "Contact";
                        var isAdminActive = controller == "Admin" && (action == "Index" || action == "Create" || action == "Edit" || action == "ViewingRequests" || action == "Users" || action == "Messages");
                        var isFavouritesActive = controller == "Property" && action == "MyFavourites";
                        var isAdmin = SignInManager.IsSignedIn(User) && User.IsInRole("Admin");
                    }
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark @(isHomeActive ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark @(isPropertiesActive ? "active" : "")" asp-area="" asp-controller="Property" asp-action="Properties">Properties</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark @(isContactActive ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>
                        @if (isAdmin)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark @(isAdminActive ? "active" : "")" asp-area="" asp-controller="Admin" asp-action="Index">AdminPanel</a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav align-items-center" style="flex-shrink: 0;">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            var currentUser = await UserManager.GetUserAsync(User);
                            var userEmail = currentUser?.Email ?? "";
                            var displayName = !string.IsNullOrEmpty(userEmail) && userEmail.Contains("@")
                                ? userEmail.Split('@')[0].Replace(".", " ").Replace("_", " ")
                                : currentUser?.UserName ?? "User";
                            var userInitials = !string.IsNullOrEmpty(displayName) 
                                ? (displayName.Length >= 2 
                                    ? displayName.Substring(0, 2).ToUpper().Replace(" ", "")
                                    : displayName.Substring(0, 1).ToUpper())
                                : "U";
                            
                            <!-- User Dropdown Menu -->
                            <li class="nav-item dropdown" style="position: relative;">
                                <a class="nav-link dropdown-toggle user-menu-btn d-flex align-items-center text-dark" 
                                   href="#" 
                                   id="userDropdown" 
                                   role="button" 
                                   data-bs-toggle="dropdown" 
                                   aria-expanded="false"
                                   style="padding: 0.375rem 0.75rem; border-radius: 50px; transition: all 0.3s ease;">
                                    <div class="user-avatar me-2" style="width: 36px; height: 36px; border-radius: 50%; background: linear-gradient(135deg, #fe5658 0%, #ff6b6d 100%); display: flex; align-items: center; justify-content: center; color: white; font-weight: 600; font-size: 0.875rem;">
                                        @userInitials
                                    </div>
                                    <span class="d-none d-lg-inline" style="font-weight: 500; max-width: 120px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                                        My Account
                                    </span>
                                    <i class="fas fa-chevron-down ms-2 d-none d-lg-inline" style="font-size: 0.75rem;"></i>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end user-dropdown-menu" 
                                    aria-labelledby="userDropdown"
                                    style="margin-top: 0.5rem; border-radius: 12px; border: 1px solid #e5e7eb; box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1); min-width: 240px; padding: 0.5rem;">
                                    <li>
                                        <div class="dropdown-header px-3 py-2" style="border-bottom: 1px solid #f3f4f6; margin-bottom: 0.25rem;">
                                            <div class="d-flex align-items-center">
                                                <div class="user-avatar me-2" style="width: 40px; height: 40px; border-radius: 50%; background: linear-gradient(135deg, #fe5658 0%, #ff6b6d 100%); display: flex; align-items: center; justify-content: center; color: white; font-weight: 600;">
                                                    @userInitials
                                                </div>
                                                <div style="flex: 1; min-width: 0;">
                                                    <div style="font-weight: 600; font-size: 0.875rem; color: #1f2937;">
                                                        Welcome back!
                                                    </div>
                                                    <div style="font-size: 0.75rem; color: #6b7280; overflow: hidden; text-overflow: ellipsis; white-space: nowrap; margin-top: 0.125rem;">
                                                        @displayName
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </li>
                                    <li>
                                        <hr class="dropdown-divider" style="margin: 0.5rem 0;">
                                    </li>
                                    <li>
                                        <a class="dropdown-item user-menu-item @(isFavouritesActive ? "active" : "")" 
                                           asp-area="" 
                                           asp-controller="Property" 
                                           asp-action="MyFavourites"
                                           style="padding: 0.625rem 1rem; border-radius: 8px; margin: 0.125rem 0.5rem; transition: all 0.2s ease; display: flex; align-items: center;">
                                            <i class="fas fa-heart me-3" style="width: 20px; color: #fe5658;"></i>
                                            <span>My Favourites</span>
                                            @if (isFavouritesActive)
                                            {
                                                <i class="fas fa-check ms-auto" style="color: #fe5658;"></i>
                                            }
                                        </a>
                                    </li>
                                    @if (!isAdmin)
                                    {
                                        <li>
                                            <a class="dropdown-item user-menu-item @(controller == "Property" && action == "MyViewingRequests" ? "active" : "")" 
                                               asp-area="" 
                                               asp-controller="Property" 
                                               asp-action="MyViewingRequests"
                                               style="padding: 0.625rem 1rem; border-radius: 8px; margin: 0.125rem 0.5rem; transition: all 0.2s ease; display: flex; align-items: center;">
                                                <i class="fas fa-calendar-check me-3" style="width: 20px; color: #fe5658;"></i>
                                                <span>My Viewing Requests</span>
                                                @if (controller == "Property" && action == "MyViewingRequests")
                                                {
                                                    <i class="fas fa-check ms-auto" style="color: #fe5658;"></i>
                                                }
                                            </a>
                                        </li>
                                    }
                                    <li>
                                        <hr class="dropdown-divider" style="margin: 0.5rem 0;">
                                    </li>
                                    <li>
                                        <a class="dropdown-item user-menu-item" 
                                           asp-area="Identity" 
                                           asp-page="/Account/Manage/Index"
                                           style="padding: 0.625rem 1rem; border-radius: 8px; margin: 0.125rem 0.5rem; transition: all 0.2s ease; display: flex; align-items: center;">
                                            <i class="fas fa-user-cog me-3" style="width: 20px; color: #fe5658;"></i>
                                            <span>Account Settings</span>
                                        </a>
                                    </li>
                                    <li>
                                        <hr class="dropdown-divider" style="margin: 0.5rem 0;">
                                    </li>
                                    <li>
                                        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" class="m-0">
                                            <button type="submit" 
                                                    class="dropdown-item user-menu-item logout-btn" 
                                                    style="padding: 0.625rem 1rem; border-radius: 8px; margin: 0.125rem 0.5rem; transition: all 0.2s ease; display: flex; align-items: center; width: calc(100% - 1rem); border: none; background: none; text-align: left; color: #dc2626;">
                                                <i class="fas fa-sign-out-alt me-3" style="width: 20px;"></i>
                                                <span>Logout</span>
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <partial name="_LoginPartial" />
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="py-4">
            @RenderBody()
        </main>
    </div>

    <footer class="site-footer">
        <div class="container">
            <div class="row g-4 py-5">
                <!-- Brand Column -->
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="footer-brand mb-4">
                        <img src="~/images/site-logo/DubiRent-cut.png" alt="DubiRent" class="footer-logo mb-3" />
                        <p class="footer-description">
                            Discover your dream space in Dubai. We offer premium properties with verified listings and transparent pricing.
                        </p>
                        <div class="footer-social">
                            <a href="#" class="social-icon" aria-label="Facebook">
                                <i class="fab fa-facebook-f"></i>
                            </a>
                            <a href="#" class="social-icon" aria-label="Instagram">
                                <i class="fab fa-instagram"></i>
                            </a>
                            <a href="#" class="social-icon" aria-label="Twitter">
                                <i class="fab fa-twitter"></i>
                            </a>
                            <a href="#" class="social-icon" aria-label="LinkedIn">
                                <i class="fab fa-linkedin-in"></i>
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Quick Links Column -->
                <div class="col-6 col-md-3 col-lg-2">
                    <h5 class="footer-title mb-3">Quick Links</h5>
                    <ul class="footer-links">
                        <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a asp-controller="Property" asp-action="Properties">Properties</a></li>
                        <li><a asp-controller="Home" asp-action="Contact">Contact</a></li>
                        <li><a asp-controller="Home" asp-action="Privacy">Privacy Policy</a></li>
                    </ul>
                </div>

                <!-- Services Column -->
                <div class="col-6 col-md-3 col-lg-3">
                    <h5 class="footer-title mb-3">Services</h5>
                    <ul class="footer-links">
                        <li><a href="#">Long-term Rentals</a></li>
                        <li><a href="#">Property Management</a></li>
                        <li><a href="#">Property Viewings</a></li>
                        <li><a href="#">Rental Agreements</a></li>
                    </ul>
                </div>

                <!-- Contact Column -->
                <div class="col-12 col-md-12 col-lg-3">
                    <h5 class="footer-title mb-3">Contact Us</h5>
                    <ul class="footer-contact">
                        <li>
                            <i class="fas fa-map-marker-alt"></i>
                            <span>Dubai, United Arab Emirates</span>
                        </li>
                        <li>
                            <i class="fas fa-phone"></i>
                            <span>+971 XX XXX XXXX</span>
                        </li>
                        <li>
                            <i class="fas fa-envelope"></i>
                            <span>info@dubirent.com</span>
                        </li>
                        <li>
                            <i class="fas fa-clock"></i>
                            <span>Monday - Friday: 9:00 AM - 6:00 PM</span>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Copyright Bar -->
            <div class="footer-bottom">
                <div class="row align-items-center">
                    <div class="col-12 col-md-6">
                        <p class="copyright mb-0">
                            &copy; @DateTime.Now.Year DubiRent. All rights reserved.
                        </p>
                    </div>
                    <div class="col-12 col-md-6 text-md-end">
                        <p class="mb-0">
                            <a asp-controller="Home" asp-action="Privacy" class="footer-link">Privacy Policy</a>
                            <span class="mx-2">|</span>
                            <a href="#" class="footer-link">Terms of Service</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    
    <!-- Cookie Consent Banner -->
    <partial name="_CookieConsent" />
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/homepage.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
