<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DubiRent</title>
    <link rel="icon" type="image/png" href="~/images/site-logo/DubiRent-single_logo-cut.png" />
    <link rel="shortcut icon" type="image/png" href="~/images/site-logo/DubiRent-single_logo-cut.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DubiRent.styles.css" asp-append-version="true" />
    <link href="~/css/homepage.css" rel="stylesheet" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/site-logo/DubiRent-cut.png" alt="DubiRent" style="height: 40px; width: auto;" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @{
                        var controller = ViewContext.RouteData.Values["Controller"]?.ToString();
                        var action = ViewContext.RouteData.Values["Action"]?.ToString();
                        var isHomeActive = controller == "Home" && action == "Index";
                        var isPropertiesActive = controller == "Property" && action == "Properties";
                        var isAdminActive = controller == "Property" && (action == "Admin" || action == "Create" || action == "Edit" || action == "Details");
                    }
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark @(isHomeActive ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark @(isPropertiesActive ? "active" : "")" asp-area="" asp-controller="Property" asp-action="Properties">Properties</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark @(isAdminActive ? "active" : "")" asp-area="" asp-controller="Property" asp-action="Admin">AdminPanel</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3 mb-5">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container d-flex align-items-center justify-content-between flex-wrap">
            <div class="d-flex align-items-center gap-3">
                <img src="~/images/site-logo/DubiRent-cut.png" alt="DubiRent" style="height: 30px; width: auto;" />
                <span>&copy; 2025 - DubiRent</span>
            </div>
            <div>
                <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/homepage.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
