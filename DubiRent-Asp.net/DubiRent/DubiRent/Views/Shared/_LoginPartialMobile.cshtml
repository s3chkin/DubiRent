@using DubiRent.Data.Models
@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <a class="dropdown-item d-flex align-items-center" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
        <i class="fas fa-user-circle me-2" style="font-size: 1.25rem;"></i>Profile
    </a>
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
        <button type="submit" class="dropdown-item btn btn-link text-dark">Logout</button>
    </form>
}
else
{
    <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Register">Register</a>
    <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Login">Login</a>
}

