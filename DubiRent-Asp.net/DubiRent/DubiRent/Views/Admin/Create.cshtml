@model DubiRent.Models.InputPropertyModel
@{
    ViewData["Title"] = "Add New Property";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-create.css" asp-append-version="true" />
}

<partial name="_Breadcrumb" />

<div class="admin-create-page">


<!-- Error Modal -->
<div id="errorModal" class="error-modal">
    <div class="error-modal-content">
        <div class="error-modal-header">
            <div class="error-modal-icon">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            <h3 class="error-modal-title">Error</h3>
        </div>
        <div class="error-modal-body" id="errorModalBody">
            <!-- Error message will be inserted here -->
        </div>
        <div class="error-modal-footer">
            <button type="button" class="btn-modal-close" onclick="closeErrorModal()">
                <i class="fas fa-times me-2"></i>Close
            </button>
        </div>
    </div>
</div>

<div class="container py-5">
    <!-- Header -->
    <div class="mb-4">
        <h1 class="display-5 fw-bold mb-2 mt-3">
            Add New <span class="dubirent-red">Property</span>
        </h1>
        <p class="text-muted">Fill in the details to add a new property to the system</p>
    </div>

    <!-- Form -->
    <div class="card form-card border-0 shadow-sm">
        <div class="card-body p-4 p-md-5">
            <form asp-action="Create" method="post" enctype="multipart/form-data" id="propertyForm">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" style="border-radius: 10px;" role="alert"></div>

                <div class="row g-4">
                    <!-- Title -->
                    <div class="col-md-12">
                        <label asp-for="Title" class="form-label">
                            <i class="fas fa-heading dubirent-red me-2"></i>Property Title
                        </label>
                        <input required asp-for="Title" class="form-control" placeholder="Enter property title" />
                        <span asp-validation-for="Title" class="text-danger small"></span>
                    </div>

                    <!-- Description -->
                    <div class="col-md-12">
                        <label asp-for="Description" class="form-label">
                            <i class="fas fa-align-left dubirent-red me-2"></i>Description
                        </label>
                        <textarea required asp-for="Description" rows="20" class="form-control form-textarea" placeholder="Enter property description"></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>

                    <!-- Location -->
                    <div class="col-md-6">
                        <label asp-for="LocationName" class="form-label">
                            <i class="fas fa-map-marker-alt dubirent-red me-2"></i>Location
                        </label>
                            <input required asp-for="LocationName" class="form-control" placeholder="e.g., Dubai Marina, Downtown Dubai, Palm Jumeirah" />
                        <small class="form-text text-muted">Enter the location name (e.g., Dubai Marina, Downtown Dubai)</small>
                        <span asp-validation-for="LocationName" class="text-danger small"></span>
                    </div>

                    <!-- Address -->
                    <div class="col-md-6">
                        <label asp-for="Address" class="form-label">
                            <i class="fas fa-location-dot dubirent-red me-2"></i>Address
                        </label>
                            <input required asp-for="Address" class="form-control" placeholder="Enter full address" />
                        <span asp-validation-for="Address" class="text-danger small"></span>
                    </div>

                    <!-- Price -->
                    <div class="col-md-4">
                        <label asp-for="PricePerMonth" class="form-label">
                            <i class="fas fa-dollar-sign dubirent-red me-2"></i>Price Per Month ($)
                        </label>
                            <input required asp-for="PricePerMonth" type="number" step="0.01" class="form-control" placeholder="0.00" />
                        <span asp-validation-for="PricePerMonth" class="text-danger small"></span>
                    </div>

                    <!-- Bedrooms -->
                    <div class="col-md-4">
                        <label asp-for="Bedrooms" class="form-label">
                            <i class="fas fa-bed dubirent-red me-2"></i>Bedrooms
                        </label>
                            <input required asp-for="Bedrooms" type="number" min="0" class="form-control" placeholder="0" />
                        <span asp-validation-for="Bedrooms" class="text-danger small"></span>
                    </div>

                    <!-- Bathrooms -->
                    <div class="col-md-4">
                        <label asp-for="Bathrooms" class="form-label">
                            <i class="fas fa-bath dubirent-red me-2"></i>Bathrooms
                        </label>
                            <input required asp-for="Bathrooms" type="number" min="0" class="form-control" placeholder="0" />
                        <span asp-validation-for="Bathrooms" class="text-danger small"></span>
                    </div>

                    <!-- Square Meters -->
                    <div class="col-md-6">
                        <label asp-for="SquareMeters" class="form-label">
                            <i class="fas fa-ruler-combined dubirent-red me-2"></i>Square Meters
                        </label>
                            <input required asp-for="SquareMeters" type="number" min="0" class="form-control" placeholder="0" />
                        <span asp-validation-for="SquareMeters" class="text-danger small"></span>
                    </div>

                    <!-- Status -->
                    <div class="col-md-6">
                        <label asp-for="Status" class="form-label">
                            <i class="fas fa-info-circle dubirent-red me-2"></i>Status
                        </label>
                        <select  asp-for="Status" asp-items="ViewBag.Statuses" class="form-select"></select>
                        <span asp-validation-for="Status" class="text-danger small"></span>
                    </div>

                    <!-- Images Upload -->
                    <div class="col-md-12 image-upload-container">
                        <label class="form-label">
                            <i class="fas fa-images dubirent-red me-2"></i>Property Images
                        </label>
                        
                        <!-- Drag & Drop Zone -->
                        <div class="upload-zone" id="uploadZone">
                            <div class="upload-zone-icon">
                                <i class="fas fa-cloud-upload-alt"></i>
                            </div>
                            <div class="upload-zone-text">Drag & drop images here</div>
                            <div class="upload-zone-hint">or click to browse</div>
                            <small class="form-text text-muted d-block mt-3">Allowed formats: PNG, JPG, JPEG. Max file size: 5MB per image.</small>
                        </div>

                        <!-- Hidden File Input -->
                            <input required asp-for="Images" type="file" class="hidden-file-input" id="fileInput" multiple accept="image/png,image/jpeg,image/jpg" />
                        <span asp-validation-for="Images" class="text-danger small"></span>

                        <!-- Image Preview Container -->
                        <div class="image-preview-container" id="imagePreviewContainer"></div>

                        <!-- Hidden input for main image index -->
                        <input type="hidden" name="MainImageIndex" id="mainImageIndex" value="0" />
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="d-flex justify-content-end gap-3 mt-5 pt-4 border-top">
                    <a asp-action="Admin" class="btn btn-outline-secondary px-4" style="border-radius: 10px;">
                        <i class="fas fa-times me-2"></i>Cancel
                    </a>
                    <button type="submit" class="btn btn-primary px-5" style="border: none; border-radius: 10px; background: var(--primary-color);">
                        <i class="fas fa-save me-2"></i>Add Property
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
    <!-- Loading Overlay -->
    <div id="formLoadingOverlay" class="form-loading-overlay">
        <div class="form-loading-content">
            <div class="form-loading-spinner"></div>
            <p class="form-loading-text">Adding Property...</p>
            <p class="text-muted small mb-0">Please wait while we process your request</p>
        </div>
    </div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/admin-create.js" asp-append-version="true"></script>
    <script>
        // Check for server-side validation errors and show in modal
        @{
            var modelErrors = ViewData.ModelState
                .Where(x => x.Value.Errors.Count > 0)
                .SelectMany(x => x.Value.Errors.Select(e => e.ErrorMessage))
                .ToList();
        }
        @if (modelErrors.Any())
        {
            <text>
            document.addEventListener('DOMContentLoaded', function() {
                const errors = @Html.Raw(Json.Serialize(modelErrors));
                if (errors && errors.length > 0) {
                    const errorMessage = errors.join('\n');
                    setTimeout(() => {
                        if (typeof showErrorModal === 'function') {
                            showErrorModal(errorMessage);
                        }
                    }, 300);
                }
            });
            </text>
        }
    </script>
}
