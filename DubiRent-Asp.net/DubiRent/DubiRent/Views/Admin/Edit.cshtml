@model DubiRent.Models.InputPropertyModel
@{
    ViewData["Title"] = "Edit Property";
    var existingImages = ViewBag.ExistingImages as List<DubiRent.Data.Models.PropertyImage> ?? new List<DubiRent.Data.Models.PropertyImage>();
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-edit.css" asp-append-version="true" />
}

<partial name="_Breadcrumb" />

<div class="admin-edit-page">
<div class="container py-5">
    <!-- Header -->
    <div class="mb-4">
        <h1 class="display-5 fw-bold mb-2 mt-3">
            Edit <span class="dubirent-red">Property</span>
        </h1>
        <p class="text-muted">Update the property details below</p>
    </div>

    <!-- Form -->
    <div class="card form-card border-0 shadow-sm">
        <div class="card-body p-4 p-md-5">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" style="border-radius: 10px;" role="alert"></div>

                <div class="row g-4">
                    <!-- Title -->
                    <div class="col-md-12">
                        <label asp-for="Title" class="form-label">
                            <i class="fas fa-heading dubirent-red me-2"></i>Property Title
                        </label>
                        <input asp-for="Title" class="form-control" placeholder="Enter property title" />
                        <span asp-validation-for="Title" class="text-danger small"></span>
                    </div>

                    <!-- Description -->
                    <div class="col-md-12">
                        <label asp-for="Description" class="form-label">
                            <i class="fas fa-align-left dubirent-red me-2"></i>Description
                        </label>
                        <textarea asp-for="Description" rows="20" class="form-control form-textarea" placeholder="Enter property description">@Model.Description</textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>

                    <!-- Location -->
                    <div class="col-md-6">
                        <label asp-for="LocationName" class="form-label">
                            <i class="fas fa-map-marker-alt dubirent-red me-2"></i>Location
                        </label>
                        <input asp-for="LocationName" class="form-control" placeholder="e.g., Dubai Marina, Downtown Dubai, Palm Jumeirah" />
                        <small class="form-text text-muted">Enter the location name (e.g., Dubai Marina, Downtown Dubai)</small>
                        <span asp-validation-for="LocationName" class="text-danger small"></span>
                    </div>

                    <!-- Address -->
                    <div class="col-md-6">
                        <label asp-for="Address" class="form-label">
                            <i class="fas fa-location-dot dubirent-red me-2"></i>Address
                        </label>
                        <input asp-for="Address" class="form-control" placeholder="Enter full address" />
                        <span asp-validation-for="Address" class="text-danger small"></span>
                    </div>

                    <!-- Price -->
                    <div class="col-md-4">
                        <label asp-for="PricePerMonth" class="form-label">
                            <i class="fas fa-dollar-sign dubirent-red me-2"></i>Price Per Month ($)
                        </label>
                        <input asp-for="PricePerMonth" type="number" step="0.01" class="form-control" placeholder="0.00" />
                        <span asp-validation-for="PricePerMonth" class="text-danger small"></span>
                    </div>

                    <!-- Bedrooms -->
                    <div class="col-md-4">
                        <label asp-for="Bedrooms" class="form-label">
                            <i class="fas fa-bed dubirent-red me-2"></i>Bedrooms
                        </label>
                        <input asp-for="Bedrooms" type="number" min="0" class="form-control" placeholder="0" />
                        <span asp-validation-for="Bedrooms" class="text-danger small"></span>
                    </div>

                    <!-- Bathrooms -->
                    <div class="col-md-4">
                        <label asp-for="Bathrooms" class="form-label">
                            <i class="fas fa-bath dubirent-red me-2"></i>Bathrooms
                        </label>
                        <input asp-for="Bathrooms" type="number" min="0" class="form-control" placeholder="0" />
                        <span asp-validation-for="Bathrooms" class="text-danger small"></span>
                    </div>

                    <!-- Square Meters -->
                    <div class="col-md-6">
                        <label asp-for="SquareMeters" class="form-label">
                            <i class="fas fa-ruler-combined dubirent-red me-2"></i>Square Meters
                        </label>
                        <input asp-for="SquareMeters" type="number" min="0" class="form-control" placeholder="0" />
                        <span asp-validation-for="SquareMeters" class="text-danger small"></span>
                    </div>

                    <!-- Status -->
                    <div class="col-md-6">
                        <label asp-for="Status" class="form-label">
                            <i class="fas fa-info-circle dubirent-red me-2"></i>Status
                        </label>
                        <select asp-for="Status" asp-items="ViewBag.Statuses" class="form-select"></select>
                        <span asp-validation-for="Status" class="text-danger small"></span>
                    </div>

                    <!-- Existing Images -->
                    @if (existingImages.Any())
                    {
                        <div class="col-md-12">
                            <label class="form-label">
                                <i class="fas fa-images dubirent-red me-2"></i>Existing Images
                            </label>
                            <small class="form-text text-muted d-block mb-3">Click on an image to set it as the main image. Click the X button to mark images for deletion.</small>
                            <div class="row g-3">
                                @foreach (var img in existingImages)
                                {
                                    <div class="col-md-3">
                                        <div class="existing-image @(img.IsMain ? "selected" : "")" onclick="selectMainImage(@img.Id)">
                                            <input type="radio" name="MainImageId" value="@img.Id" @(img.IsMain ? "checked" : "") id="main-@img.Id" />
                                            <img src="@img.ImageUrl" alt="Property Image" />
                                            @if (img.IsMain)
                                            {
                                                <span class="image-main-badge">Main</span>
                                            }
                                            <button type="button" class="image-delete-btn" onclick="event.stopPropagation(); showDeleteImageModal(@img.Id, this, '@img.ImageUrl')">
                                                <i class="fas fa-times"></i>
                                            </button>
                                            <input type="hidden" name="ImagesToDelete" id="img-@img.Id" value="" />
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }

                    <!-- New Images Upload -->
                    <div class="col-md-12">
                        <label class="form-label">
                            <i class="fas fa-images dubirent-red me-2"></i>Add New Images <span class="text-muted small">(Optional)</span>
                        </label>
                        <input asp-for="Images" type="file" class="form-control" multiple accept="image/png,image/jpeg,image/jpg" data-val="false" />
                        <small class="form-text text-muted">You can select multiple images. Allowed formats: PNG, JPG, JPEG. Max file size: 5MB per image.</small>
                        <span asp-validation-for="Images" class="text-danger small"></span>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="d-flex justify-content-end gap-3 mt-5 pt-4 border-top">
                    <a asp-action="Admin" class="btn btn-outline-secondary px-4" style="border-radius: 10px;">
                        <i class="fas fa-times me-2"></i>Cancel
                    </a>
                    <button type="submit" class="btn btn-primary px-5" style="border: none; border-radius: 10px; background: var(--primary-color);">
                        <i class="fas fa-save me-2"></i>Update Property
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Image Confirmation Modal -->
<div class="modal fade" id="deleteImageModal" tabindex="-1" aria-labelledby="deleteImageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" style="border-radius: 20px; border: none; box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);">
            <div class="modal-header border-0 pb-0" style="padding: 2rem 2rem 1rem;">
                <div class="modal-icon-wrapper d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 80px; height: 80px; background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%); border-radius: 50%;">
                    <i class="fas fa-exclamation-triangle text-danger" style="font-size: 2.5rem;"></i>
                </div>
            </div>
            <div class="modal-body text-center px-4 pb-0" style="padding: 0 2rem 1.5rem;">
                <h5 class="modal-title fw-bold mb-3" id="deleteImageModalLabel" style="font-size: 1.5rem; color: #1f2937;">
                    Delete Image?
                </h5>
                <p class="text-muted mb-4" style="font-size: 0.9375rem; line-height: 1.6;">
                    Are you sure you want to delete this image? This action will mark the image for deletion when you save the property.
                </p>
                <div id="deleteImagePreview" class="mb-4" style="max-width: 200px; margin: 0 auto;">
                    <img id="previewImage" src="" alt="Preview" style="width: 100%; border-radius: 10px; border: 2px solid #e5e7eb;" />
                </div>
                <div class="alert alert-warning d-flex align-items-start mb-4" style="border-radius: 10px; background: #fff7ed; border: 1px solid #fed7aa; color: #9a3412;">
                    <i class="fas fa-info-circle me-2 mt-1"></i>
                    <div class="text-start" style="font-size: 0.875rem;">
                        <strong>Note:</strong> The image will be deleted permanently when you click "Update Property" button. You can undo this by clicking the undo button before saving.
                    </div>
                </div>
            </div>
            <div class="modal-footer border-0 pt-0 justify-content-center gap-3" style="padding: 0 2rem 2rem;">
                <button type="button" class="btn btn-light px-4 py-2" data-bs-dismiss="modal" style="border-radius: 10px; border: 1px solid #e5e7eb; font-weight: 600;">
                    <i class="fas fa-times me-2"></i>Cancel
                </button>
                <button type="button" id="confirmDeleteImageBtn" class="btn btn-danger px-4 py-2" style="border-radius: 10px; background: linear-gradient(135deg, #dc2626 0%, #ef4444 100%); border: none; font-weight: 600; box-shadow: 0 4px 12px rgba(220, 38, 38, 0.3);">
                    <i class="fas fa-trash me-2"></i>Delete Image
                </button>
            </div>
        </div>
    </div>
</div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/admin-edit.js" asp-append-version="true"></script>
}

